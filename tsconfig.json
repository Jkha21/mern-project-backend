{
  "compilerOptions": {
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "express",
      "multer"
    ],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "src/interfaces/employee.interface.ts"],
  "exclude": ["node_modules", "src/tests"]
}